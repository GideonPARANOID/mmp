<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:paddingLeft="@dimen/activity_horizontal_margin"
   android:paddingRight="@dimen/activity_horizontal_margin"
   android:paddingTop="@dimen/activity_vertical_margin"
   android:paddingBottom="@dimen/activity_vertical_margin"
   android:orientation="vertical" >

   <TextView
      android:id="@+id/ol_text_id"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/button"
      android:layout_alignBottom="@+id/button"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"/>

   <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/ol_text_name"
      android:layout_marginLeft="25dp"
      android:layout_marginStart="25dp"
      android:layout_alignBaseline="@+id/ol_text_id"
      android:layout_alignBottom="@+id/ol_text_id"
      android:layout_toRightOf="@+id/ol_text_id"
      android:layout_toEndOf="@+id/ol_text_id"/>

   <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/ol_button_add"
      android:id="@+id/ol_button_add"
      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"/>

</RelativeLayout>
