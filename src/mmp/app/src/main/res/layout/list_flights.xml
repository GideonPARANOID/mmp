<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   tools:context="uk.ac.aber.gij2.mmp.ui.FlightManagerActivity"

   android:id="@+id/lf_row"

   android:orientation="horizontal"
   android:weightSum="100"
   android:paddingLeft="@dimen/a_margin_horizontal"
   android:paddingRight="@dimen/a_margin_horizontal"
   android:paddingTop="@dimen/a_margin_vertical"
   android:paddingBottom="@dimen/a_margin_vertical"

   android:layout_width="match_parent"
   android:layout_height="match_parent" >

   <TextView
      android:id="@+id/lf_text_name"
      android:clickable="true"
      style="@style/AppTheme"

      android:layout_width="0dp"
      android:layout_weight="30"
      android:layout_height="30dp" />

   <TextView
      android:id="@+id/lf_text_olan"
      style="@style/AppTheme"

      android:layout_width="0dp"
      android:layout_weight="70"
      android:layout_height="30dp" />
</LinearLayout>