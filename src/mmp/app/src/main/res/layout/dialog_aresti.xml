<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   tools:context="uk.ac.aber.gij2.olandroid.view.BuildFlightActivity"

   android:orientation="vertical"
   android:paddingLeft="@dimen/a_margin_horizontal"
   android:paddingRight="@dimen/a_margin_horizontal"
   android:paddingTop="@dimen/a_margin_vertical"
   android:paddingBottom="@dimen/a_margin_vertical"

   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:layout_centerHorizontal="true"
   android:layout_centerVertical="true"
   android:gravity="center_vertical|center_horizontal|center">

   <ImageView
      android:id="@+id/d_image_aresti"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

   <TextView
      android:id="@+id/d_text_aresti"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
</LinearLayout>
