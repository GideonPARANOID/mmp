<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   tools:context="uk.ac.aber.gij2.mmp.activities.MainActivity"

   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:paddingLeft="@dimen/activity_horizontal_margin"
   android:paddingRight="@dimen/activity_horizontal_margin"
   android:paddingTop="@dimen/activity_vertical_margin"
   android:paddingBottom="@dimen/activity_vertical_margin"

   android:orientation="vertical"
   android:layout_toRightOf="@+id/bfa_intro_title"
   android:layout_toEndOf="@+id/bfa_intro_title"
   android:layout_alignParentTop="true">

   <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/bfa_edittext_olan"
      android:layout_gravity="center_horizontal"
      android:hint="@string/bfa_hint_olan" />

   <Button
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="@string/bfa_button_vis"
      android:id="@+id/bfa_button_vis"
      android:layout_gravity="center_horizontal"
      android:onClick="button_vis" />

   <ListView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/bfa_manoeuvre_list"
      android:layout_gravity="center_horizontal"/>
</LinearLayout>

