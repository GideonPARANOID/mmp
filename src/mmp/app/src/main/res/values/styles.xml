<?xml version="1.0" encoding="utf-8"?>
<resources>
   <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
      <item name="colorPrimary">@color/app_primary</item>
      <item name="colorPrimaryDark">@color/black</item>
      <item name="colorAccent">@color/app_secondary</item>
      <item name="android:textColor">@color/black</item>
      <item name="android:windowAnimationStyle">@style/AppTheme.AnimationActivity</item>
   </style>
   
   <style name="AppTheme.Visualisation" parent="AppTheme">
      <item name="colorPrimary">@color/app_primary</item>
      <item name="android:windowActionBarOverlay">true</item>
      <item name="windowActionBarOverlay">true</item>
   </style>

   <style name="AppTheme.AnimationActivity" parent="android:Animation.Activity">
      <item name="android:activityOpenEnterAnimation">@anim/activity_open_translate</item>
      <item name="android:activityOpenExitAnimation">@anim/activity_open_scale</item>
      <item name="android:activityCloseEnterAnimation">@anim/activity_close_translate</item>
      <item name="android:activityCloseExitAnimation">@anim/activity_close_scale</item>
   </style>

   <style name="PrimaryText" parent="Base.TextAppearance.AppCompat.Medium"></style>
   <style name="SecondaryText" parent="Base.TextAppearance.AppCompat.Small"></style>

   <style name="SpinnerItem" parent="Base.TextAppearance.AppCompat.Widget.DropDownItem">
      <item name="android:padding">5dp</item>
   </style>
</resources>
